{
  "name": "retroarch-thumbnail-updater",
  "version": "1.0.0",
  "description": "Playlist-based thumbnail updater",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder -p always"
  },
  "keywords": [
    "retroarch",
    "thumbnail",
    "playlist",
    "updater"
  ],
  "author": "Rafael V Croffi <rvcroffi@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^7.0.2",
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-reloader": "^1.0.1"
  },
  "dependencies": {
    "electron-updater": "^4.2.5",
    "fuse.js": "^5.1.0",
    "jquery": "^3.4.1"
  },
  "build": {
    "appId": "com.rvcroffi.${name}",
    "productName": "Retroarch Thumbnail Updater",
    "copyright": "Copyright Â© 2020 ${author}",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "icon.png",
      "target": {
        "target": "portable",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    }
  }
}