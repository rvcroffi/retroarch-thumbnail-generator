{
  "name": "retroarch-thumbnail-updater",
  "version": "1.0.0",
  "description": "Generate a set of thumbnails for Retroarch based on you existing playlist.",
  "homepage": "https://rvcroffi.github.io/retroarch-thumbnail-updater/",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "build": "cross-env NODE_ENV=production electron-builder -p always"
  },
  "keywords": [
    "retroarch",
    "thumbnail",
    "playlist",
    "updater"
  ],
  "license": "MIT",
  "author": {
    "name": "Rafael V Croffi",
    "email": "rvcroffi@gmail.com",
    "url": "https://about.me/rvcroffi"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rvcroffi/retroarch-thumbnail-updater.git"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "electron": "^8.3.0",
    "electron-builder": "^22.7.0",
    "electron-reloader": "^1.0.1"
  },
  "dependencies": {
    "electron-updater": "^4.3.1",
    "fuse.js": "^5.2.3",
    "jquery": "^3.5.1"
  },
  "build": {
    "appId": "com.rvcroffi.${name}",
    "productName": "Retroarch Thumbnail Updater",
    "artifactName": "${name}_${arch}.${ext}",
    "copyright": "Copyright Â© 2020 ${author}",
    "files": [
      "**/*",
      "!docs/"
    ],
    "directories": {
      "output": "dist-${os}-${arch}"
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": {
        "provider": "github",
        "owner": "rvcroffi",
        "repo": "retroarch-thumbnail-updater"
      },
      "icon": "544x544.png"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "544x544.png",
      "category": "Utility",
      "synopsis": "Playlist-based thumbnail updater for Retroarch",
      "executableName": "${name}",
      "desktop": {
        "Name": "${productName}",
        "Type": "Application",
        "Encoding": "UTF-8",
        "Comment": "${description}",
        "Icon": "${icon}",
        "Terminal": "false",
        "Categories": "${category}"
      }
    }
  }
}